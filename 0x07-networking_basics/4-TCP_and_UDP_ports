#!/usr/bin/env bash
# Displays all listening ports on the system

echo "Active Internet connections (only servers)"
echo "Proto Recv-Q Send-Q Local Address           Foreign Address         State       PID/Program name"
# Use netstat to get listening sockets
netstat -ltnp | awk 'NR > 2 {print $1, $4, $7}' | while read -r proto local_address pid_program; do
    # Extract PID and program name
    pid=$(echo "$pid_program" | awk -F '/' '{print $1}')
    program=$(ps -p "$pid" -o comm= | tail -n 1)

    # Print the result
    echo "$proto        0      0 $local_address                     LISTEN      $pid/$program"
done

echo "Active UNIX domain sockets (only servers)"
echo "Proto RefCnt Flags       Type       State         I-Node   PID/Program name    Path"

# Use netstat to get UNIX domain sockets
netstat -lx | awk 'NR > 2 {print $1, $2, $3, $4, $5, $6, $7}' | while read -r proto refcnt flags type state inode pid_program path; do
    # Extract PID and program name
    pid=$(echo "$pid_program" | awk -F '/' '{print $1}')
    program=$(ps -p "$pid" -o comm= | tail -n 1)

    # Print the result
    echo "$proto $refcnt $flags $type $state $inode   $pid/$program    $path"
done
