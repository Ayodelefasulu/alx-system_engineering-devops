#!/usr/bin/env bash

# Check if script is executed as root
if [[ $EUID -ne 0 ]]; then
    echo "Please run this script as root (with sudo)." 
    exit 1
fi

# Update package lists and install Nginx
apt-get update
apt-get install -y nginx

# Create the directory if it doesn't exist
mkdir -p /etc/nginx/sites-available/

# Define the Nginx custom header configuration
echo '
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    server_name _;

    location / {
        echo "Hello World!";

        # Custom header configuration
        add_header X-Served-By $hostname;

        # Other server configurations if needed
    }
}' > /etc/nginx/sites-available/custom_header

# Create a symbolic link to enable the site
ln -s /etc/nginx/sites-available/custom_header /etc/nginx/sites-enabled/

# Restart Nginx without using systemctl
nginx -s reload

# Output success message
echo "Nginx custom header configured successfully."
